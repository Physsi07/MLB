<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Team's Roster</title>
  <%- include('partials/links') %>
    <link rel="stylesheet" type="text/css" href="/css/reminder.css">
</head>

<body>
  <%- include('partials/nav') %>

    <div id="particles-js"></div>
    <div class="container">

      <div class="header">
        <h1>Team Roster</h1>
      </div>

      <div class="searchBox">
        <input class="searchInput" type="search" name="search" placeholder="Enter Team's Name">
      </div>

      <div class="team">
        <table class="teamInfo">
          <thead>
            <tr>
              <th>Name</th>
              <th>Market</th>
              <th>League</th>
              <th>Division</th>
            </tr>
          </thead>
          <tbody class="innerTeamInfo">
            <tr>
              <!-- <td class="teamInfo1"></td>
              <td class="teamInfo2"></td>
              <td class="teamInfo3"></td>
              <td class="teamInfo4"></td> -->
            </tr>
          </tbody>
        </table>
      </div>

      <div class="player">
        <table class="playersInfo">
          <thead>
            <tr>
              <th>Player</th>
              <th>Team</th>
              <th>Pos</th>
              <th>Jersey Number</th>
              <th>Throw Hand</th>
              <th>Batting Hand</th>
              <th>Debut</th>
            </tr>
          </thead>
          <tbody class="innerPlayerInfo">

          </tbody>
        </table>
      </div>

    </div>

    <%- include('partials/scripts') %>
      <script type="text/javascript" src="/js/reminder.js"></script>
</body>

</html>
